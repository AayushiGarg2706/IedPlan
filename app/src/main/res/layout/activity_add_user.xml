<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iedbg"

    tools:context="com.logischtech.iedplan.Add_user">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/actionbar"
        android:background="#fff"
        android:layout_weight="1"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/logo"
            android:text="Add User"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#3588C5"

            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/back_arrow"
            android:textColor="#0973BB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:id="@+id/back_arrow"
            android:layout_height="30dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:background="@drawable/contentlr_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_height="440dp"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="First Name"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="50dp"
            android:hint="First Name"
            android:id="@+id/firstname"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Last Name"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content" />s

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="130dp"
            android:hint="Last Name"
            android:id="@+id/edlastname"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Email"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="210dp"
            android:hint="Email"
            android:id="@+id/edemail"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Role"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="290dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:id="@+id/role"
            android:textColor="#3689C5"
            android:theme="@style/Spinner"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"

            android:prompt="@string/prompt"
            android:paddingLeft="20dp"
            android:paddingTop="-10dp"
            android:layout_marginTop="298dp"
            android:layout_height="wrap_content"></Spinner>
        <TextView
            android:layout_width="135dp"
            android:layout_marginTop="353dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/textview_layout"
            android:layout_height="62dp" />
<Button
    android:layout_width="120dp"
    android:layout_marginTop="360dp"
    android:layout_marginLeft="30dp"
    android:text="Create"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:id="@+id/create"
    android:background="@drawable/create_button_layout"
    android:layout_height="wrap_content" />

        <TextView
            android:layout_width="135dp"
            android:layout_marginTop="353dp"
            android:layout_marginLeft="173dp"
            android:background="@drawable/cancel_border"
            android:layout_height="62dp" />


        <Button
            android:layout_width="120dp"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="180dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/cancel_layout"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</RelativeLayout>
