<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iedbg"

    tools:context="com.logischtech.iedplan.Add_course">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/actionbar"
        android:background="#fff"
        android:layout_weight="1"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/logo"
            android:text="Course"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#3588C5"

            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/back_arrow"
            android:textColor="#0973BB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:id="@+id/back_arrow"
            android:layout_height="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:background="@drawable/contentlr_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_height="320dp"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="Course Code"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="50dp"
            android:hint="Course Code"
            android:id="@+id/coursename"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Title"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content" />s

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/textview_layout"
            android:layout_marginTop="130dp"
            android:hint="Title"
            android:id="@+id/coursetitle"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_marginTop="213dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/textview_layout"
            android:layout_height="62dp" />
        <Button
            android:layout_width="120dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="30dp"
            android:text="Create"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/btncreate"
            android:background="@drawable/create_button_layout"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="135dp"
            android:layout_marginTop="213dp"
            android:layout_marginLeft="173dp"
            android:background="@drawable/cancel_border"
            android:layout_height="62dp" />


        <Button
            android:layout_width="120dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="180dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/cancel_layout"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</RelativeLayout>
