<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/iedbg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.logischtech.iedplan.Login">

    <RelativeLayout
        android:layout_width="330dp"
        android:background="@drawable/contentlr_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="340dp"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:layout_width="260dp"
            android:src="@drawable/iedlogo"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/imageView3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:text="LOGIN"
            android:textColor="#FFAE3B"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="73dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="145dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
>

        </View>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="170dp"
            android:hint="@string/icon_user"
            android:inputType="textShortMessage|textEmailAddress"

            android:textStyle="normal"
            android:id="@+id/etusername"
             android:textSize="16dp"
            android:textColorHint="#0B74BB"

            android:textColor="#3689C5"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="220dp"
            android:hint="@string/icon_password"
            android:textSize="16dp"

            android:inputType="textPassword"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"

            android:textStyle="normal"
            android:textColorHint="#0B74BB"
            android:textColor="#3689C5"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:id="@+id/etpassword"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/submit"
        android:layout_marginTop="340dp"
        android:id="@+id/btnlogin"

        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Forgot Password"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="420dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:textColor="#FFAE3B"
        android:textStyle="bold"
        android:layout_marginTop="455dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="300dp"
        android:background="@drawable/spnsr"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="490dp"
        android:layout_height="40dp" />
   </RelativeLayout>
